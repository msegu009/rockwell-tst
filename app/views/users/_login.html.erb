<h2>Login!</h2>
<% if flash.key? ('login_errors') %>
<ul class="list-group">
  <li class="list-group-item list-group-item-danger"><%= flash[:login_errors] %></li>
</ul>
<% end -%>
<%= simple_form_for( :session, url: '/login', html: {class: 'form-vertical'}) do |f| %>
<%= f.error_notification %>
<%= f.input :email %>
<%= f.input :password_digest %>
<%= f.button :submit, "Sign in" %>
<% end %>

    </div>


    <%= form_for @booking do |f| %>
      <%= f.label "Date"%>
      <input type="text" class="datepicker">
      <%= f.text_field :day %>


      <p>Button To check Tables</p>

      <label>Table Number: </label>
      <%= select_tag 'table_id', options_for_select(@tables.map{ |t| [t.id, t.name] }) %>
      <br>

      <label>Table Deposit</label>
      <input type="text" value="" readonly>

      <p>Group Info:</p>

      <%= f.label :num_of_males, "Number of Males"%>:
      <%= f.text_field :num_of_males%><br />

      <%= f.label :num_of_females, "Number of Females" %>:
      <%= f.text_field :num_of_females%><br />
      <br>

      <label>Atmosphere: Yes/No/Required</label>
      <label>Atmosphere Total</label>
      <input type="text" value="" readonly>
      <br>
      <br>
      <label>Server Request: </label>
      <%#= select_tag 'server_id', options_for_select(@servers.map{ |s| [s.id, s.name] }) %>
      <br>

      <%= f.label :expected_spend, "Total"%>:
      <%= f.text_field :expected_spend%><br />





      <%= f.submit "Reserve Table" %>
    <% end %>



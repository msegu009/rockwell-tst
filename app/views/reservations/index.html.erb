


<div class="top_section">

  <!-- first section -->
  <div class="booking_info">
    <div class="booking_info1">
      <p class="customer_name">Hello <%= @current_user ? @current_user.firstname : "Customer" %> </p> <!-- TODO fix this-->
      <br>
    </div>

    <% if params[:day] %>
      <%= form_for @booking do |f| %>
        <p>Button To check Tables</p>

        <label>Table Number: </label>
        <%= select_tag 'table_id', options_for_select(@tables.map{ |t| [t.id, t.name] }) %>
        <br>

        <label>Table Deposit</label>
        <input type="text" value="" readonly>

        <p>Group Info:</p>

        <%= f.label :num_of_males, "Number of Males"%>:
        <%= f.text_field :num_of_males%><br />

        <%= f.label :num_of_females, "Number of Females" %>:
        <%= f.text_field :num_of_females%><br />
        <br>

        <label>Atmosphere: Yes/No/Required</label>
        <label>Atmosphere Total</label>
        <input type="text" value="" readonly>
        <br>
        <br>
        <label>Server Request: </label>
        <%#= select_tag 'server_id', options_for_select(@servers.map{ |s| [s.id, s.name] }) %>
        <br>

        <%= f.label :expected_spend, "Total"%>:
        <%= f.text_field :expected_spend%><br />

        <%= f.submit "Reserve Table" %>
      <% end %>
      <%else %>
      <%= form_tag reservations_path, method: 'get' do %>
        <%= label_tag "Date"%>
        <%= date_field_tag :day %>
        <%= submit_tag "Check Table Availability" %>
      <% end %>
    <% end %>
  </div>


    <!-- end first section -->

    <!-- second section -->
    <div class="club_floorplan">

      <div class="main_bar">
        Main Bar
      </div>

      <div class="tdf_middle_side">
        <!-- <div class="tdf_middle_side"> -->

        <div class="tables_and_dancefloor">

          <div class="tdf_left_side">
            <% @club.floors.each do |floor|%>
            <h1><%= floor.name%></h1>
            <ul>
            <% if params[:day] %>
              <%floor.available_tables(params[:day]).each do |table| %>
                <li>
                  <%= table.id %> <br>
                  <%=table.name%><%= "$" + table.min_price%><button>select</button>
                </li>
              <% end %>
            <% else %>
              <%floor.tables.each do |table| %>
                <li>
                  <%= table.id %> <br>
                  <%=table.name%><%= "$" + table.min_price%><button>select</button>
                </li>
              <% end %>
            <% end %>
            </ul>
            <%end%>
            
      </div>




      <!-- this div closes vip_tables_andDJbooth_booking -->

      <!-- </div> -->
    </div>

    <div class="payment_section">
      This is where the credit card info will go
    </div>

    <!-- this div closes out floorplan -->
    <!-- end second section -->

    <!-- third section -->
    <br>
    <!-- end third section -->

  </div><!--end top section-->

  <div class="bottom_section">
    This is where the paragraph with a lot of info is going to go.
  </div>

